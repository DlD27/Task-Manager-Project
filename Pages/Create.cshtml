@page
@model TaskManagerProject.Pages.CreateModel
@{
    ViewData["Title"] = "Create Task";
}

<!-- Page for creating a new task -->
<h2>Create Task</h2>

<form method="post">
    <!-- Input task title -->
    <div style="margin-bottom: 15px;">
        <label>Title:</label>
        <input type="text" asp-for="Task.Title" required style="width: 100%;"/>
    </div>

    <!-- Input task description -->
    <div style="margin-bottom: 15px;">
        <label>Description:</label>
        <textarea asp-for="Task.Description" style="width: 100%; height: 100px;"></textarea>
    </div>

    <!-- Select due date and submit the task -->
    <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 15px;">
        <div style="flex-grow: 1;">
            <label>Due Date:</label>
            <input type="date" asp-for="Task.DateDue" required style="width: 20%;"/>
        </div>
        <button type="submit" class="button">Create</button>
    </div>
</form>
